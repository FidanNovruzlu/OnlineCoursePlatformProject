@model StudentRegisterVM
@{
    Layout = null;
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.svg">
    <link href="~/admin/vendor/wow-master/css/libs/animate.css" rel="stylesheet">
    <link href="~/admin/vendor/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/admin/vendor/bootstrap-select-country/css/bootstrap-select-country.min.css">
    <link rel="stylesheet" href="~/admin/vendor/jquery-nice-select/css/nice-select.css">
    <link href="~/admin/vendor/datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet">

    <link href="~/admin/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
    <!--swiper-slider-->
    <link rel="stylesheet" href="~/admin/vendor/swiper/css/swiper-bundle.min.css">
    <!-- Style css -->
    <link  href="~/admin/css/style.css" rel="stylesheet">
}
<body class="body  h-100">
    <div class="authincation d-flex flex-column flex-lg-row flex-column-fluid">
        <div class="login-aside text-center  d-flex flex-column flex-row-auto">
            <div class="d-flex flex-column-auto flex-column pt-lg-40 pt-15">
                <div class="text-center mb-lg-4 pt-3 logo">
                     <a asp-action="Index" asp-controller="Home" class="navbar-brand logo d-flex justify-content-center align-items-center">
                          <img src="~/assets/img/logo.svg" class="img-fluid" alt="Logo" width="200px">
                     </a>
                      <h1 class="text-center text-white d-flex justify-content-center align-items-center pt-4">Welcome back!</h1>
                </div>
            </div>
            <div class="aside-image position-relative">
                <img src="~/assets/img/login-img.png" class="img2 move-2" alt="Logo">
                <img class="img4 move-4 rounded-circle" src="~/admin/images/background/pic-2.png" alt="" width="260px">
                <img class="img1 move-1 rounded-circle" src="~/assets/img/course/course-06.jpg" alt="" width="120px" height="120px">
                <img class="img3 move-3 rounded-circle" src="~/assets/img/course/course-08.jpg" alt="" width="140px" height="140px">
            </div>
        </div>
        <div class="container flex-row-fluid d-flex flex-column justify-content-center position-relative overflow-hidden p-7 mx-auto">
            <div class="d-flex justify-content-center h-100 align-items-center">
                <div class="authincation-content style-2">
                    <div class="row no-gutters">
                        <div class="col-xl-12 tab-content">
                            <div id="sign-up" class="auth-form tab-pane fade show active  form-validation">
                                    <div class="text-center mb-4">
                                        <h3 class="text-center mb-2 text-black">Sign up</h3>
                                        <hr />
                                    </div>
                                    <div class="d-flex justify-content-center align-items-center pb-4">
                                    <form method="get">
                                      <button type="submit" asp-action="InstructorRegister" asp-controller="Account" class="btn btn-primary d-flex text-aligin-center text-center">
                                          <span class="icon-container">
                                            <svg xmlns="http://www.w3.org/2000/svg" height="1.5em" class="icon" viewBox="0 0 640 512">
                                              <!--! Font Awesome Free 6.4.0 by @@fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                                              <path d="M208 352c-2.39 0-4.78.35-7.06 1.09C187.98 357.3 174.35 360 160 360c-14.35 0-27.98-2.7-40.95-6.91-2.28-.74-4.66-1.09-7.05-1.09C49.94 352-.33 402.48 0 464.62.14 490.88 21.73 512 48 512h224c26.27 0 47.86-21.12 48-47.38.33-62.14-49.94-112.62-112-112.62zm-48-32c53.02 0 96-42.98 96-96s-42.98-96-96-96-96 42.98-96 96 42.98 96 96 96zM592 0H208c-26.47 0-48 22.25-48 49.59V96c23.42 0 45.1 6.78 64 17.8V64h352v288h-64v-64H384v64h-76.24c19.1 16.69 33.12 38.73 39.69 64H592c26.47 0 48-22.25 48-49.59V49.59C640 22.25 618.47 0 592 0z"/>
                                            </svg>
                                          </span>
                                          <span class="icon-label">Instructor Sign Up</span>
                                        </button>

                                        <style>
                                          .icon-container {
                                            display: inline-flex;
                                            align-items: center;
                                            margin-right: 0.5em;
                                            padding:3px;
                                          }

                                          .icon {
                                            fill: white;
                                            width: 1em;
                                            height: 1em;
                                            vertical-align: middle;
                                          }

                                          .icon-label {
                                            color: white;
                                            font-size: 1.2em;
                                            vertical-align: middle;
                                          }
                                        </style>

                                    </form>
                                    </div>
                                <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-row d-flex">
                                        <div class="mb-3 p-1 col-md-6">
                                            <label class="form-label mb-2 fs-13 label-color font-w500" asp-for="Name"></label>
                                            <input class="form-control" placeholder="Enter your name" asp-for="Name">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3 p-1 col-md-6">
                                            <label class="form-label mb-2 fs-13 label-color font-w500" asp-for="Surname"></label>
                                            <input class="form-control" placeholder="Enter your surname" asp-for="Surname">
                                            <span asp-validation-for="Surname" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label mb-2 fs-13 label-color font-w500" asp-for="UserName"></label>
                                        <input class="form-control" placeholder="Enter your username" asp-for="UserName">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label mb-2 fs-13 label-color font-w500" asp-for="Email"></label>
                                        <input class="form-control" placeholder="Enter your email address" asp-for="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label mb-2 fs-13 label-color font-w500" asp-for="Password"></label>
                                        <input class="form-control" placeholder="Enter your password" asp-for="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <a asp-action="ForgotPassword" asp-controller="Account"  class="text-primary float-end mb-4">Forgot Password ?</a>
                                    <button type="submit" class="btn btn-block btn-primary">Sign me up</button>

                                </form>
                                <div class="new-account mt-3 text-center">
                                    <p class="font-w500">Already have an account? <a class="text-primary" asp-action="Login" asp-controller="Account">Sign in</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>